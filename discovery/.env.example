# =============================================================================
# Discovery Service Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file with real credentials!
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# PostgreSQL connection settings for the discovery service database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=discovery_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=discovery_db

# =============================================================================
# CACHE (Redis)
# =============================================================================
# Redis URL for caching and session management
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# STORAGE (S3/LocalStack)
# =============================================================================
# For local development, use LocalStack. For production, use AWS S3.
# LocalStack endpoint (leave empty for production AWS)
S3_ENDPOINT_URL=http://localhost:4566
S3_BUCKET=discovery-documents
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# =============================================================================
# O*NET API
# =============================================================================
# O*NET Web Services provides occupational data for job analysis
# Get your API key at: https://services.onetcenter.org/developer/
ONET_API_KEY=your_onet_api_key_here
ONET_API_BASE_URL=https://services.onetcenter.org/ws/

# =============================================================================
# ANTHROPIC API
# =============================================================================
# Anthropic Claude API for AI-powered analysis
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# APPLICATION
# =============================================================================
# API server configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=true
LOG_LEVEL=INFO
